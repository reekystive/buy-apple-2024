{
    "$schema": "https://json.schemastore.org/chrome-manifest",
    "manifest_version": 3,
    "name": "Buy Apple 2024",
    "description": "Buy your favorite iPhone 16 models",
    "version": "1.0",
    "permissions": ["ttsEngine", "tts", "activeTab", "scripting", "contextMenus", "tabs", "storage"],
    "host_permissions": ["https://*.apple.com.cn/*"],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self';"
    },
    "options_page": "dist/options.html",
    "action": {
        "default_title": "Buy Apple 2024",
        "default_popup": "dist/popup.html"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["inject-script.js", "dist/tips.html", "icons/icon38.png"],
            "matches": ["https://*.apple.com.cn/*"]
        }
    ],
    "content_scripts": [
        {
            "js": ["content-script.js"],
            "matches": ["https://*.apple.com.cn/*"]
        }
    ]
}
